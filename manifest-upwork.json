{
  "manifest_version": 2,
  "name": "Watch Upwork. Upwork job watcher.",
  "short_name": "Watch Upwork",
  "description": "This extension use Upwork API for watching new jobs and showing notifications.",
  "version": "1.0.0",
  "browser_action": {
    "default_icon": "/images/upwork-icon.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "/images/upwork-icon.png",
    "48": "/images/upwork-icon48.png",
    "128": "/images/upwork-icon128.png"
  },
  "content_security_policy": "script-src 'self'; object-src 'self'",
  "permissions": [
    "tabs",
    "background",
    "notifications",
    "alarms",
    "https://www.upwork.com/*"
  ],
  "web_accessible_resources": [
    "verifier.html"
  ],
  "background": {
    "page": "background.html",
    "persistent": false
  }
}